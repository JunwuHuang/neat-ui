{
  "name": "neat",
  "version": "1.0.0",
  "description": "A components library for React.",
  "author": "JunwuHuang",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prepare": "husky install && chmod ug+x .husky/*",
    "prettier": "prettier --write .",
    "bootstrap": "lerna bootstrap --loglevel warn",
    "prestart": "npm run bootstrap && npm run start:ui",
    "start:ui": "lerna run --scope @sijilolai/neat-ui start --loglevel warn",
    "start": "cd playground && npm run dev"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@rollup/plugin-typescript": "^8.2.5",
    "@types/node": "^16.11.9",
    "@types/react": "^17.0.27",
    "@types/react-dom": "^17.0.11",
    "@types/yargs": "^17.0.7",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "acorn-jsx": "^5.3.2",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.27.1",
    "husky": "^7.0.2",
    "lerna": "^4.0.0",
    "less": "^4.1.2",
    "lint-staged": "^11.2.3",
    "postcss": "^8.3.11",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.58.0",
    "rollup-plugin-postcss": "^4.0.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.3",
    "yargs": "^17.2.1"
  }
}
