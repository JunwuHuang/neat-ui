{
  "name": "neat",
  "version": "1.0.0",
  "description": "A components library for React.",
  "author": "JunwuHuang",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prepare": "husky install && chmod ug+x .husky/*",
    "prettier": "prettier --write .",
    "eslint": "eslint --fix .",
    "stylelint": "stylelint --fix **/*.{css,less}",
    "bootstrap": "lerna bootstrap --loglevel warn",
    "prestart": "npm run bootstrap && npm run start:ui",
    "start:ui": "lerna run --scope @sijilolai/neat-ui start --loglevel warn",
    "start": "cd playground && npm start",
    "lint": "npm-run-all stylelint eslint",
    "build": "lerna run --scope @sijilolai/neat-ui build"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/plugin-transform-runtime": "^7.16.4",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@rollup/plugin-typescript": "^8.2.5",
    "@types/node": "^16.11.9",
    "@types/react": "^17.0.27",
    "@types/react-dom": "^17.0.11",
    "@types/yargs": "^17.0.7",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "acorn": "^8.6.0",
    "acorn-jsx": "^5.3.2",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.27.1",
    "husky": "^7.0.2",
    "lerna": "^4.0.0",
    "less": "^4.1.2",
    "lint-staged": "^11.2.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.11",
    "postcss-less": "^5.0.0",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.58.0",
    "rollup-plugin-postcss": "^4.0.1",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-order": "^5.0.0",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3",
    "yargs": "^17.2.1"
  }
}
